{
  "name": "@32bitkid/bits",
  "version": "0.0.0",
  "description": "A simple bit-reader and bit-writer",
  "author": "J Holmes <j@holmes.codes>",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "mocha test/",
    "test:watch": "mocha --watch test/",
    "lint": "eslint src/**/*.ts",
    "coverage": "nyc mocha test/",
    "format": "prettier --write src/",
    "clean": "rimraf dist"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "eslint": "^6.1.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
